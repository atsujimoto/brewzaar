<h4>Add a new beer</h4>

<div class="row">
		<form action="/beer/new" method="POST" class="col s12">
				<div class="row">
						<div class="input-field col s6">
								<label for="name">Name of Beer</label>
								<input type="text" name="name">
						</div>

						<div class="input-field col s6">
								<select>
										<option value="" disabled selected>Select a Style</option>
										<% styles.data.forEach(function(style) { %>
												<option value="<%= style.id %>"><%= style.shortName %></option>
										<% }); %>
								</select>
						</div>
				</div>

				<div class="row">
						<div class="input-field col s12">
								<textarea name="description" class="materialize-textarea" placeholder="Beer description"></textarea>
								<label for="description">Description</label>
						</div>
				</div>

				<div class="row">
						<div class="input-field col s4">
								<label for="abv">ABV</label>
								<input type="text" name="abv" placeholder="0.0">
						</div>

						<div class="input-field col s4">
								<label for="ibu">IBU</label>
								<input type="number" name="ibu"	placeholder="0">
						</div>

						<div class="input-field col s4">
								<label for="brewery">Brewery</label>
								<input type="text" name="brewery" disabled value="<%= breweryId %>">
						</div>
				</div>
				<input type="submit" value="Create Beer" class="btn">
		</form>
</div>
