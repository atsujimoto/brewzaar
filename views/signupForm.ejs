<h4>Sign Up for a New Account</h4>

<div class="row">
		<form action="/signup" method="POST" class="col s12">
				<div class="row">
						<div class="input-field col s12 m4">
								<label for="username">Username</label>
								<input type="text" name="username" placeholder="Desired username" class="validate">
						</div>

						<div class="input-field col s12 m4">
								<label for="login">Email</label>
								<input type="email" name="email" placeholder="Your email" class="validate">
						</div>

						<div class="input-field col s12 m4">
								<label for="password">Password</label>
								<input type="password" name="password" placeholder="Your password" class="validate">
						</div>
				</div>
				<div class="row">
						<div class="input-field col s12 m6">
								<label for="firstname">First Name</label>
								<input type="text" name="firstName" placeholder="Your first name" class="validate">
						</div>

						<div class="input-field col s12 m6">
								<label for="lastname">Last Name</label>
								<input type="text" name="lastName" placeholder="Your last name" class="validate">
						</div>
				</div>
				<div class="row">
						<div class="input-field col s12">
								<label for="address">Address</label>
								<input type="text" name="address" placeholder="Your address" class="validate">
						</div>
				</div>

				<input type="submit" value="Sign Up" class="btn">
		</form>
</div>
